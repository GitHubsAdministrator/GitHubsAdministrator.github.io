function open_select_forum(){
  $('.select-forum-ul').toggle();
  $(document).bind('mousedown.efscbarEvent',function(e){
      if( $(e.target).parents('.select-forum').length === 0){
        $(document).unbind("mousedown.efscbarEvent");
        $('.select-forum-ul').hide();
      }
  });
}
$(function(){
