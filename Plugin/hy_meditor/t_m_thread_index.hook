                pid:window.rep_pid,
                content:utf16toEntities(editor.getValue()),
                {hook p_m_editor_thread_index_data}
            },
            dataType: 'json'
        }).then(function(e) {
            if(e.error){
                window.location.reload();
            }else{
                $.hy.warning( e.info);
            }
            _obj.removeAttr('disabled');
            _obj.text("发 布");
        }, function() {
            $.hy.warning( "请尝试重新提交");
            _obj.removeAttr('disabled');
            _obj.text("发 布");
        });
    })
})
